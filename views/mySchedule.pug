extends base

block content
  main.main
    //- conditions
    if user  
      -var client = user.role == 'user'
      -var counsellor = user.role == 'counsellor'
      -var consultant = user.role == 'consultant'
      -var admin  = user.role == 'admin'
    section.section.section-schedules
      .noShow 
        input(type="text" value=`${schedule.id}` id='schId')
      .schedule-details.c2-shadow.midWd
        .sch-details
          .sch-info.card-details.flex 
            .sch-info--heading.card-details--header 
              h2 Appointment details 
            .sch-info--content.card-content.card-content--sch 
              .sch-info--field.grid  
                h3 <i class='bx bx-check-circle' ></i> Service 
                p #{schedule.service}
              .sch-info--field.grid  
                h3 <i class='bx bx-calendar' ></i> Date 
                p #{schedule.schDate}
              .sch-info--field.grid  
                h3 <i class='bx bx-time-five' ></i> Time 
                p #{schedule.schTime}
              .sch-info--field.grid  
                h3 <i class='bx bxs-badge-check'></i> Meeting type  
                p #{schedule.schType}
              .sch-info--field.grid  
                h3 <i class='bx bx-phone' ></i> Follow up phone
                p #{schedule.schPhone}
              .sch-info--field.grid  
                h3 <i class='bx bx-download' ></i> Sent 
                p #{schedule.createdAt}
              .sch-info--field.grid  
                h3 <i class='bx bx-loader-circle'></i> Done Sessions
                if schedule.inProgress 
                  p #{schedule.doneSessions}
                else
                  input(type="number" id="doneSessions")
              .sch-info--field.grid
                h3 <i class='bx bx-loader-alt'></i> Remaining Sessions 
                if schedule.inProgress 
                    p #{schedule.remainingSessions}
                else 
                    input(type="number" id ="remainingSessions")
              if !schedule.complete
                .sch-btns.flex  
                  button.btn.btn-sch.btn-sch--inprogress.flex <i class='bx bx-loader-alt'></i> Mark As Inprogress
                  button.btn.btn-sch.btn-sch--complete.flex <i class='bx bx-check-double'></i> Mark As Completed
              else 
                button(class='btn btn-sch' disabled) Completed



                       



