header.header
  nav
    .main-nav.flex  
      .branding 
        a(href="/") 
          h1 MindAnchor

      .nav-links 
        ul.flex  
          li: a(href="/welcome") Home  
          li: a(href="/schedule") Schedule Meeting  
          li: a(href="/myappointments") My appointments  
          li: a(href="/me") My Account 
          li: a(href="" class="donate-btn") Donations  
      if user 
        .user 
          .user-image--client.flex  
            span #{user.firstName.slice(0, 1)}
            span #{user.lastName.slice(0, 1)} 
          .profile-viewer.profile-viewer--client.c-shadow.hideViewer  
            a(href='/me' class="flex profile-viewer--link") 
              <i class='bx bxs-user-rectangle'></i> 
              span Profile 
            .btn.btn-logout.flex.profile-viewer--link 
              <i class='bx bx-log-out-circle' ></i> 
              span Logout 
        
