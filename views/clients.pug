doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      link(href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet')

      title MindAnchor | #{title}
  
  body
  include _headerAdmin
  main.main.main-admin  
    .page-wrapper.page-wrapper--users 
        .users-container.users-container--clients
          h2 All Application Clients
          .user-container-headers.grid.grid-7 
            h3 Photo 
            h3 Name 
            h3 Gender
            h3 Email 
            h3 Phone 
            h3 DOB
            h3 STUDENT

          each client in clients 
            .container-user.container-user--client.grid.grid-7
              .user-image.flex  
                span #{client.firstName.slice(0, 1)}
                span #{client.lastName.slice(0, 1)}
              .user-desc.user-desc--client 
                h3 #{client.firstName} #{client.lastName}
              .user-desc.user-desc--client.flex 
                if ( client.gender =='Male')
                  span <i class='bx bx-male'></i>
                else if (client.gender == 'Female')
                  span <i class='bx bx-female' ></i>
                p #{client.gender} 

              .user-desc.user-desc--client 
                p #{client.email}
              .user-desc.user-desc--client 
                p #{client.phone}
              .user-desc.user-desc--client 
                p #{client.dob}
              .user-desc.user-desc--client 
                if (client.student)
                  p.student.student-yes  
                    span Yes 
                else 
                  p.student.student-no  
                    span No 



              


        




script(src='/js/bundle.js')
